<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Thiết lập màu nền -->
    <solid android:color="#FFFFFF" />  <!-- Màu nền trắng -->

    <!-- Đường viền -->
    <stroke
        android:color="#B0BEC5"
        android:width="1dp" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />  <!-- Bo tròn góc 8dp -->

    <!-- Đổ bóng (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
