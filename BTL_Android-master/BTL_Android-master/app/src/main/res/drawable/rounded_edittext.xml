<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bo tròn góc -->
    <corners android:radius="50dp" />

    <!-- Màu nền cho EditText -->
    <solid android:color="#E0E0E0" />  <!-- Màu xám nhạt, bạn có thể thay đổi màu khác -->

    <!-- Đường viền -->
    <stroke
        android:width="1dp"
        android:color="#B0BEC5" />  <!-- Màu xám đậm, bạn có thể thay đổi nếu cần -->

    <!-- Padding nội bộ -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>